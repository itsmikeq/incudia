.row
  .col-sm-12
    %h1 Sign in
    = form_for(resource, :as => resource_name, |
      :url => session_path(resource_name),     |
      role: "form") do |f|                     |
      .form-inline
        .form-group
          = f.label :email, class: "sr-only"
          .row
            .col-sm-2
              = f.text_field :email, :autofocus => true, class: "form-control", placeholder: "Email"
        .form-group
          = f.label :password, class: "sr-only"
          .row
            .col-sm-2
              = f.password_field :password, class: "form-control", placeholder: "Password"
        .form-group
          .row
            .col-sm-2
              = link_to "Sign in", new_session_path(resource_name), class: "btn btn-default"
        .form-group
          .row
            .col-sm-2
              - if devise_mapping.registerable? && controller_name != 'registrations'
                = link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default"

        - if devise_mapping.rememberable?
          = f.check_box :remember_me, checked: true
          = f.label :remember_me
        .form-inline
          .form-group
            .row
              = render "devise/shared/links", f: f
