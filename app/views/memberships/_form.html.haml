= form_for @membership do |f|
  - if @membership.errors.any?
    #error_explanation
      %h2= "#{pluralize(@membership.errors.count, "error")} prohibited this membership from being saved:"
      %ul
        - @membership.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :member
    = f.text_field :member
  .field
    = f.label :of
    = f.text_field :of
  .actions
    = f.submit 'Save'
