= form_for @broadcast do |f|
  - if @broadcast.errors.any?
    #error_explanation
      %h2= "#{pluralize(@broadcast.errors.count, "error")} prohibited this broadcast from being saved:"
      %ul
        - @broadcast.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :message
    = f.text_field :message
  .field
    = f.label :ends_at
    = f.datetime_select :ends_at
  .field
    = f.label :starts_at
    = f.datetime_select :starts_at
  .field
    = f.label :alert_type
    = f.number_field :alert_type
  .field
    = f.label :color
    = f.text_field :color
  .field
    = f.label :font
    = f.text_field :font
  .actions
    = f.submit 'Save'
