= form_for @broadcast_message do |f|
  - if @broadcast_message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@broadcast_message.errors.count, "error")} prohibited this broadcast_message from being saved:"
      %ul
        - @broadcast_message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :message
    = f.text_field :message
  .field
    = f.label :expire_in
    = f.datetime_select :expire_in
  .field
    = f.label :start_at
    = f.datetime_select :start_at
  .actions
    = f.submit 'Save'
