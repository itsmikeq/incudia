%h1 Listing namespaces

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Owner
      %th Type
      %th
      %th
      %th
      
  %tbody
    - @namespaces.each do |namespace|
      %tr
        %td= namespace.name
        %td= namespace.description
        %td= namespace.owner
        %td= namespace.type
        %td= link_to 'Show', namespace
        %td= link_to 'Edit', edit_namespace_path(namespace)
        %td= link_to 'Destroy', namespace, :method => :delete, :data => { :confirm => 'Are you sure?' }

