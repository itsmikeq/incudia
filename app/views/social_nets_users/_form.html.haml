= form_for @social_nets_user do |f|
  - if @social_nets_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@social_nets_user.errors.count, "error")} prohibited this social_nets_user from being saved:"
      %ul
        - @social_nets_user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :social_net
    = f.text_field :social_net
  .actions
    = f.submit 'Save'
